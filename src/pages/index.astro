---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import ExtensionCard from '~/components/widgets/ExtensionCard.astro';
import { Image } from 'astro:assets';
import testimonialImage from '~/assets/images/cornelia-testimonial.jpg';

const metadata = {
  title: 'EnforcedFlow - Enhance Your Zapier Automations with Smart Extensions',
  description:
    'Streamline your workflows with powerful features like Human-in-the-Loop steps, round-robin task distribution, and precise automation control',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Get Started Free',
        href: '#extensions',
      },
      {
        text: 'View on Zapier',
        href: 'https://zapier.com/apps/enforcedflow/integrations',
        target: '_blank',
      },
    ]}
  >
    <Fragment slot="title">
      Enhance Your Zapier Automations with <span class="text-accent dark:text-white">Smart Extensions</span>
    </Fragment>

    <Fragment slot="subtitle">
      Streamline your workflows with powerful features like Human-in-the-Loop steps, round-robin task distribution, and
      precise automation control. Perfect for teams that need flexibility beyond out-of-the-box software.
    </Fragment>
  </Hero>

  <!-- Extensions Section -->
  <section id="extensions" class="px-4 py-10 sm:px-6 mx-auto lg:px-8 lg:py-15 max-w-7xl">
    <div class="mb-12 text-center">
      <h2 class="text-3xl md:text-4xl font-bold font-heading mb-4">Available Extensions</h2>
      <p class="text-xl text-muted dark:text-slate-400 max-w-3xl mx-auto">
        Choose from our growing library of workflow extensions, each designed to solve specific automation challenges.
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      <ExtensionCard
        title="Simple Round Robin"
        description="Basic sequential task distribution for teams that need straightforward, equal assignment rotation. Quick to set up and easy to use."
        icon=""
        extensionSlug="simple-round-robin"
      />

      <ExtensionCard
        title="Advanced Round Robin"
        description="Distribute tasks intelligently across your team with skill-based, time-based, and priority-based routing. Perfect for complex team workflows."
        icon=""
        extensionSlug="advanced-round-robin"
      />

      <ExtensionCard
        title="Human-in-the-Loop"
        description="Add review and approval steps to AI-generated content and automated workflows. Ensure accuracy, compliance, and accountability."
        icon=""
        extensionSlug="human-in-the-loop"
      />
    </div>
  </section>

  <!-- Testimonial Section -->
  <section class="relative isolate overflow-hidden bg-white px-6 py-10 sm:py-10 lg:px-8 dark:bg-gray-900">
    <div class="max-w-4xl mx-auto">
      <figure>
        <blockquote class="text-center text-xl/8 font-semibold text-gray-900 sm:text-2xl/9 dark:text-white">
          <p>
            "EnforcedFlow has eliminated the complexity of Zapier setup, making the process seamless. The tool
            integrates smoothly with my Google Business Profile review management, reducing response times considerably.
            The support team is highly responsive and offers valuable consultation whenever challenges arise."
          </p>
        </blockquote>
        <figcaption class="mt-10">
          <Image
            src={testimonialImage}
            alt="Cornelia Aigenberger"
            class="mx-auto size-10 rounded-full"
            width={40}
            height={40}
          />
          <div class="mt-4 flex items-center justify-center space-x-3 text-base">
            <div class="font-semibold text-gray-900 dark:text-white">Cornelia Aigenberger</div>
            <svg viewBox="0 0 2 2" width="3" height="3" aria-hidden="true" class="fill-gray-900 dark:fill-white">
              <circle r="1" cx="1" cy="1"></circle>
            </svg>
            <a
              href="https://aigenberger.com"
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-600 transition-colors hover:text-gray-800 dark:text-gray-400 dark:hover:text-gray-200"
            >
              aigenberger.com
            </a>
          </div>
        </figcaption>
      </figure>
    </div>
  </section>
</Layout>
